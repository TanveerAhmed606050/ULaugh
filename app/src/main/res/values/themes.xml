    <style name="NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/transparent</item>
        <item name="colorOnPrimary">@color/transparent</item>
        <item name="colorAccent">@color/dark_purple</item>
        <!-- Secondary brand color. -->
        <!--        <item name="android:windowTranslucentStatus">true</item>-->
        <item name="statusBarBackground">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:navigationBarColor">@color/dark_purple</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

