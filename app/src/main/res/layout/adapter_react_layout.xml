<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/most_emoji"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/fear_ic" />

    <TextView
        android:id="@+id/react_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Surprise Reacts"
        android:textColor="@color/dark_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/most_emoji"
        app:layout_constraintStart_toEndOf="@+id/most_emoji"
        app:layout_constraintTop_toTopOf="@+id/most_emoji" />

    <TextView
        android:id="@+id/react_per"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="40%"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/react_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/react_name" />

</androidx.constraintlayout.widget.ConstraintLayout>