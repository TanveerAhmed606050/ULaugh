<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp">


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/photo_iv"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:scaleType="fitXY"
            android:src="@drawable/yooseungho"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="12dp" />

        <ImageView
            android:id="@+id/add_friend"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="@+id/photo_iv"
            app:layout_constraintStart_toStartOf="@+id/photo_iv"
            app:layout_constraintTop_toBottomOf="@+id/photo_iv"
            app:srcCompat="@drawable/plus_circle" />

        <TextView
            android:id="@+id/name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Annete"
            android:textColor="@color/dark_black"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/add_friend"
            app:layout_constraintStart_toStartOf="@+id/add_friend"
            app:layout_constraintTop_toBottomOf="@+id/add_friend" />

        <TextView
            android:id="@+id/status_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_regular"
            android:text="annete"
            android:textColor="@color/dark_black"
            android:textSize="8sp"
            app:layout_constraintEnd_toEndOf="@+id/name_tv"
            app:layout_constraintStart_toStartOf="@+id/name_tv"
            app:layout_constraintTop_toBottomOf="@+id/name_tv" />
</androidx.constraintlayout.widget.ConstraintLayout>