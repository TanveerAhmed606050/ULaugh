<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="8dp"
    android:background="@drawable/shadow_border"
    android:layout_height="200dp">

    <TextView
        android:id="@+id/car_make_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Mercedes CLA with AMG special body kit"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/divider2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/views_text_views"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="45 Views"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/car_make_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/car_make_text" />

    <ImageView
        android:id="@+id/ads_image"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/car_make_text"
        app:layout_constraintTop_toBottomOf="@+id/car_make_text"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/car_condition_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Used cars for sale >"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintStart_toEndOf="@+id/ads_image"
        app:layout_constraintTop_toTopOf="@+id/ads_image" />

    <TextView
        android:id="@+id/car_model_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Mercedes Benz"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_semibold"
        app:layout_constraintBottom_toBottomOf="@+id/car_condition_details_text"
        app:layout_constraintStart_toEndOf="@+id/car_condition_details_text"
        app:layout_constraintTop_toTopOf="@+id/car_condition_details_text" />

    <TextView
        android:id="@+id/textView133"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Year:"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/ads_image"
        app:layout_constraintTop_toBottomOf="@+id/car_condition_details_text" />

    <TextView
        android:id="@+id/car_year_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="2021"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView133"
        app:layout_constraintStart_toEndOf="@+id/textView133"
        app:layout_constraintTop_toTopOf="@+id/textView133" />

    <TextView
        android:id="@+id/textView135"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Fuel Type:"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/car_year_text"
        app:layout_constraintEnd_toStartOf="@+id/fuel_type_text"
        app:layout_constraintTop_toTopOf="@+id/car_year_text" />

    <TextView
        android:id="@+id/fuel_type_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Petrol"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView135"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView135" />
    <TextView
        android:id="@+id/textView137"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Kilometers:"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/ads_image"
        app:layout_constraintTop_toBottomOf="@+id/textView133" />

    <TextView
        android:id="@+id/car_mileage_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="10,000"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:ellipsize="end"
        android:maxLines="1"
        android:gravity="start"
        app:layout_constraintBottom_toBottomOf="@+id/textView137"
        app:layout_constraintEnd_toStartOf="@+id/textView139"
        app:layout_constraintStart_toEndOf="@+id/textView137"
        app:layout_constraintTop_toTopOf="@+id/textView137" />

    <TextView
        android:id="@+id/textView139"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Condition:"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/condition_text"
        app:layout_constraintEnd_toStartOf="@+id/condition_text"
        app:layout_constraintTop_toTopOf="@+id/condition_text" />

    <TextView
        android:id="@+id/condition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="New"
        android:fontFamily="@font/poppins_regular"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/textView137"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView137" />


    <TextView
        android:id="@+id/car_price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="AED 95,000"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/textView137"
        app:layout_constraintTop_toBottomOf="@+id/textView137" />

    <Button
        android:id="@+id/contact_seller_button"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/grey_rc"
        android:fontFamily="@font/poppins_bold"
        android:text="Contact Seller"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/car_price_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/car_price_text"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/details_location_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:text="UAE,Dubai 414km"
        android:maxLines="1"
        android:ellipsize="end"
        android:gravity="start"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView36"
        app:layout_constraintEnd_toStartOf="@+id/car_date_text"
        app:layout_constraintStart_toEndOf="@+id/imageView36"
        app:layout_constraintTop_toTopOf="@+id/imageView36" />

    <ImageView
        android:id="@+id/imageView36"
        android:layout_width="13dp"
        android:layout_height="13dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@+id/ads_image"
        app:layout_constraintTop_toBottomOf="@+id/ads_image"
        app:srcCompat="@drawable/grey_rc" />

    <TextView
        android:id="@+id/car_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="4 April 2020"
        android:fontFamily="@font/poppins_regular"
        android:textSize="10sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/details_location_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/details_location_text" />

    <View
        android:id="@+id/divider2"
        android:layout_width="4dp"
        android:layout_height="0dp"
        android:background="@color/purple_200"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>