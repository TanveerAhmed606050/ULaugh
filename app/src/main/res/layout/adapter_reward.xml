<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="4">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/profile_iv"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/seokangjoon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/like_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_bold"
            android:text="2.7k"
            android:textColor="@color/dark_black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/reward_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/like_count"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="@font/poppins_regular"
            android:maxLines="2"
            android:text="Hello My Friends, Today I Visted My Dream Place Check It Out. It Was Creazy Exprience."
            android:textColor="@color/black"
            android:textSize="9sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/claim_btn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/reward_detail"
            android:layout_marginTop="8dp"
            android:background="@drawable/purple_rc"
            android:fontFamily="@font/poppins_medium"
            android:text="@string/claim"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>
</LinearLayout>