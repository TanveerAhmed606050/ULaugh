<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/user_photo"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/user_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/react_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_bold"
        android:text="2.7k"
        android:textColor="@color/dark_black"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="@id/user_photo" />

    <ImageView
        android:id="@+id/react_iv7"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/neutral_ic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/react_count"
        app:layout_constraintEnd_toEndOf="@id/react_iv6"
        app:layout_constraintStart_toStartOf="@+id/react_iv6"
        app:layout_constraintTop_toTopOf="@+id/react_count" />

    <ImageView
        android:id="@+id/react_iv6"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/fear_ic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/react_count"
        app:layout_constraintEnd_toEndOf="@id/react_iv5"
        app:layout_constraintStart_toStartOf="@+id/react_iv5"
        app:layout_constraintTop_toTopOf="@+id/react_count" />

    <ImageView
        android:id="@+id/react_iv5"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/sad_ic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/react_count"
        app:layout_constraintEnd_toEndOf="@id/react_iv4"
        app:layout_constraintStart_toStartOf="@+id/react_iv4"
        app:layout_constraintTop_toTopOf="@+id/react_count" />

    <ImageView
        android:id="@+id/react_iv4"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/neutral_ic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/react_count"
        app:layout_constraintEnd_toEndOf="@id/react_iv3"
        app:layout_constraintStart_toStartOf="@+id/react_iv3"
        app:layout_constraintTop_toTopOf="@+id/react_count" />

    <ImageView
        android:id="@+id/react_iv3"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/fear_ic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/react_count"
        app:layout_constraintEnd_toEndOf="@id/react_iv2"
        app:layout_constraintStart_toStartOf="@+id/react_iv2"
        app:layout_constraintTop_toTopOf="@+id/react_count" />

    <ImageView
        android:id="@+id/react_iv2"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginStart="24dp"
        android:src="@drawable/haha_ic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/react_count"
        app:layout_constraintEnd_toEndOf="@id/react_iv1"
        app:layout_constraintStart_toStartOf="@+id/react_iv1"
        app:layout_constraintTop_toTopOf="@+id/react_count" />

    <ImageView
        android:id="@+id/react_iv1"
        android:layout_width="30dp"
        android:layout_height="36dp"
        android:layout_marginStart="4dp"
        android:src="@drawable/neutral_ic"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/react_count"
        app:layout_constraintStart_toEndOf="@+id/react_count"
        app:layout_constraintTop_toTopOf="@+id/react_count" />

    <TextView
        android:id="@+id/reward_detail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/react_count"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:fontFamily="@font/poppins_regular"
        android:maxLines="4"
        android:text="Hello My Friends, Today I Visted My Dream Place Check It Out. It Was Creazy Exprience."
        android:textColor="@color/black"
        android:textSize="9sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/react_count"
        app:layout_constraintTop_toBottomOf="@id/react_iv1" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/claim_btn"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@id/reward_detail"
        android:layout_marginTop="8dp"
        android:background="@drawable/purple_rc"
        android:fontFamily="@font/poppins_medium"
        android:padding="8dp"
        android:text="@string/claim"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/react_count"
        app:layout_constraintTop_toBottomOf="@id/reward_detail" />
</androidx.constraintlayout.widget.ConstraintLayout>
