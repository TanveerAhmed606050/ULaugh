<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/cover_iv"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            android:src="@drawable/seokangjoon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/react_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/poppins_bold"
            android:text="245"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/cover_iv"
            app:layout_constraintStart_toStartOf="@+id/back_btn" />

        <ImageView
            android:id="@+id/react_iv7"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/neutral_ic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/react_count"
            app:layout_constraintEnd_toEndOf="@id/react_iv6"
            app:layout_constraintStart_toStartOf="@+id/react_iv6"
            app:layout_constraintTop_toTopOf="@+id/react_count" />

        <ImageView
            android:id="@+id/react_iv6"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/fear_ic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/react_count"
            app:layout_constraintEnd_toEndOf="@id/react_iv5"
            app:layout_constraintStart_toStartOf="@+id/react_iv5"
            app:layout_constraintTop_toTopOf="@+id/react_count" />

        <ImageView
            android:id="@+id/react_iv5"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/sad_ic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/react_count"
            app:layout_constraintEnd_toEndOf="@id/react_iv4"
            app:layout_constraintStart_toStartOf="@+id/react_iv4"
            app:layout_constraintTop_toTopOf="@+id/react_count" />

        <ImageView
            android:id="@+id/react_iv4"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/neutral_ic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/react_count"
            app:layout_constraintEnd_toEndOf="@id/react_iv3"
            app:layout_constraintStart_toStartOf="@+id/react_iv3"
            app:layout_constraintTop_toTopOf="@+id/react_count" />

        <ImageView
            android:id="@+id/react_iv3"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/fear_ic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/react_count"
            app:layout_constraintEnd_toEndOf="@id/react_iv2"
            app:layout_constraintStart_toStartOf="@+id/react_iv2"
            app:layout_constraintTop_toTopOf="@+id/react_count" />

        <ImageView
            android:id="@+id/react_iv2"
            android:layout_width="30dp"
            android:layout_height="36dp"
            android:layout_marginStart="24dp"
            android:src="@drawable/sad_ic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/react_count"
            app:layout_constraintEnd_toEndOf="@id/react_iv1"
            app:layout_constraintStart_toStartOf="@+id/react_iv1"
            app:layout_constraintTop_toTopOf="@+id/react_count" />

        <ImageView
            android:id="@+id/react_iv1"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:layout_marginStart="4dp"
            android:src="@drawable/haha_ic"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@+id/react_count"
            app:layout_constraintStart_toEndOf="@+id/react_count"
            app:layout_constraintTop_toTopOf="@+id/react_count" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="32dp"
            android:layout_height="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:src="@drawable/menu_white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/back_btn" />

        <include
            android:id="@+id/included"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cover_iv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            layout="@layout/container_react" />
    </androidx.constraintlayout.widget.ConstraintLayout>
